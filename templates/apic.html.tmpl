{{define "title"}}
    Login details
{{end}}
{{define "content"}}
<form method="POST">
    <label>URL:</label>
    <input id="URL" type="text" value="{{.URL}}" name="url" readonly>
    <label>Username: </label>
    <input id="username" type="text" value="{{.Username}}" name="username" readonly="readonly">
    <label>Password: </label>
    <input id="password" type="text" value="{{.Password}}" name="password" readonly="readonly">
    <input id="editable" name="Edit" type="button" value="Edit">
    <input type="submit" value="Submit">
</form>
{{end}}
{{define "js"}}
document.getElementById("editable").onclick = function (event) {
    document.getElementById("URL").readOnly = false;
    document.getElementById("username").readOnly = false;
    document.getElementById("password").readOnly = false;
};
{{end}}
